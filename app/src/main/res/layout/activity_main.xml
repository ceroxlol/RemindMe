<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ceroxlol.remindme.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_appointments_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/button_add_new_location"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/new_location"
        app:layout_constraintBottom_toTopOf="@id/button_edit_appointment"
        app:layout_constraintEnd_toStartOf="@+id/button_add_new_appointment"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_appointments_recycler_view" />

    <Button
        android:id="@+id/button_add_new_appointment"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/new_appointment"
        app:layout_constraintBottom_toTopOf="@id/button_edit_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_add_new_location"
        app:layout_constraintTop_toBottomOf="@id/list_appointments_recycler_view" />

    <Button
        android:id="@+id/button_edit_appointment"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/edit_appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_add_new_appointment"
        app:layout_constraintLeft_toRightOf="@id/button_edit_appointment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_add_new_appointment"
        app:layout_constraintTop_toBottomOf="@id/button_add_new_appointment" />

    <Button
        android:id="@+id/button_edit_location"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/edit_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_add_new_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_edit_location"
        app:layout_constraintStart_toStartOf="@+id/button_add_new_location"
        app:layout_constraintTop_toBottomOf="@id/button_add_new_location" />

</android.support.constraint.ConstraintLayout>
