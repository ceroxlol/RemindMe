<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ceroxlol.remindme.MainActivity">

    <ScrollView
        android:id="@+id/scrollView_appointment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_appointment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_add_new_location"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="New Location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_add_new_appointment"
        app:layout_constraintBottom_toTopOf="@id/button_edit_appointment"
        app:layout_constraintTop_toBottomOf="@id/scrollView_appointment_list"/>

    <Button
        android:id="@+id/button_add_new_appointment"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="New appointment"
        app:layout_constraintBottom_toTopOf="@id/button_edit_location"
        app:layout_constraintLeft_toRightOf="@id/button_add_new_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_appointment_list"/>

    <Button
        android:id="@+id/button_edit_appointment"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Edit Appointment"
        app:layout_constraintTop_toBottomOf="@id/button_add_new_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_edit_location"/>

    <Button
        android:id="@+id/button_edit_location"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Edit Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_edit_appointment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_add_new_appointment"/>

</android.support.constraint.ConstraintLayout>
