<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_add_new_appointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ceroxlol.remindme.AddNewAppointmentActivity">

    <TextView
        android:id="@+id/textView_create_new_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new appointment"
        android:textSize="10pt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextAppointmentName"
        />

    <EditText
        android:id="@+id/editTextAppointmentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Appointment name"
        android:inputType="text"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_create_new_appointment"
        app:layout_constraintBottom_toTopOf="@id/editTextAppointmentNote"/>

    <EditText
        android:id="@+id/editTextAppointmentNote"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="Appointment note"
        android:inputType="text"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextAppointmentName"
        app:layout_constraintBottom_toTopOf="@id/autoCompleteTextViewLocation"
        />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type in your favorite location"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buttonChooseLocation"
        app:layout_constraintTop_toBottomOf="@id/editTextAppointmentNote"
        app:layout_constraintBottom_toTopOf="@id/checkBoxAddDueDate"/>

    <Button
        android:id="@+id/buttonChooseLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose location"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/autoCompleteTextViewLocation"
        app:layout_constraintTop_toBottomOf="@id/editTextAppointmentNote" />

    <CheckBox
        android:id="@+id/checkBoxAddDueDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add due date"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/autoCompleteTextViewLocation"
        app:layout_constraintRight_toLeftOf="@id/textViewDate"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="10pt"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@id/checkBoxAddDueDate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonChooseLocation"
        />

    <Button
        android:id="@+id/buttonSaveAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
