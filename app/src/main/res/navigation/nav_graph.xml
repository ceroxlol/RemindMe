<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.ceroxlol.remindme.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main_viewpager">
        <action
            android:id="@+id/action_MainFragment_to_AddAppointmentFragment"
            app:destination="@id/addAppointmentFragment" />
        <action
            android:id="@+id/action_MainFragment_to_AddLocationFragment"
            app:destination="@id/addLocationFragment" />
        <action
            android:id="@+id/action_MainFragment_to_EditAppointmentFragment"
            app:destination="@id/editAppointmentFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editLocationFragment"
            app:destination="@id/editLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/editAppointmentFragment"
        android:name="com.example.ceroxlol.remindme.fragments.EditAppointmentFragment"
        android:label="@string/appointment_detail_fragment_title"
        tools:layout="@layout/fragment_add_appointment">
        <argument
            android:name="appointment_id"
            app:argType="integer" />
        <action
            android:id="@+id/action_EditAppointmentFragment_to_MainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAppointmentFragment"
        android:name="com.example.ceroxlol.remindme.fragments.AddAppointmentFragment"
        android:label="@string/appointment_add_fragment_title"
        tools:layout="@layout/fragment_add_appointment">
        <action
            android:id="@+id/action_addAppointmentFragment_to_MainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/addLocationFragment"
        android:name="com.example.ceroxlol.remindme.fragments.AddLocationFragment"
        android:label="Pick Location"
        tools:layout="@layout/fragment_pick_location_maps">
        <action
            android:id="@+id/action_addLocationFragment_to_MainFragment"
            app:destination="@id/mainFragment"/>
    </fragment>
    <fragment
        android:id="@+id/editLocationFragment"
        android:name="com.example.ceroxlol.remindme.fragments.EditLocationFragment"
        android:label="Edit location"
        tools:layout="@layout/fragment_pick_location_maps">
        <argument
            android:name="locationMarker_id"
            app:argType="integer"/>
        <action
            android:id="@+id/action_editLocationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>
